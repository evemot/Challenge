<h2>Crear Articulos</h2>

@model Noticia
@using (Html.BeginForm("Index", "RegNuevo", FormMethod.Post))
{
    <div>
        <div class="col-md-12">
            <div class="col-md-1">
                @Html.LabelFor(d => d.Titulo)

            </div>
            <div class="col-md-1">
                @Html.TextBoxFor(d => d.Titulo, "titulo", new { @class = "fore-control", required = "required" })

            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-1">
                @Html.LabelFor(d => d.Descripcion)
            </div>
            <div class="col-md-1">
                @Html.TextBoxFor(d => d.Descripcion, "description", new { @class = "fore-control", required = "required" })
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-1">
                @Html.LabelFor(d => d.Contenido)
            </div>
            <div class="col-md-1">
                @Html.TextBoxFor(d => d.Contenido, "contenido", new { @class = "fore-control", required = "required" })
            </div>
        </div>

        <div class="col-md-12">
            <div class="col-md-1">
                @Html.LabelFor(d => d.url)
            </div>
            <div class="col-md-1">
                @Html.TextBoxFor(d => d.url, "Url", new { @class = "fore-control", required = "required" })
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-1">
                @Html.LabelFor(d => d.imagen)
            </div>
            <div class="col-md-1">
                <input type="file" name="Imagen" />
                <span asp-validation-for="imagen"></span>

            </div>
        </div>
        <br />

    </div>
    <div class="col-md-1">  <input type="submit" value="Guardar" /></div>
}

